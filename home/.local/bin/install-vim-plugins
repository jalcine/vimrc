#!/usr/bin/env bash
# vim: set fdm=marker :

if [ -x pyenv ]; then
  pyenv install neovim-py2 2.7.11
  pyenv install neovim-py3 3.5.2
  pyenv shell neovim-py2 neovim-py3
fi

# Install remote execution runtimes. {{
python_packages="neovim requests"
pip install ${python_packages}
pip3 install ${python_packages}
gem install neovim
# }}

# Install.
nvim -S "$HOME/.config/nvim/plugins.vim"
